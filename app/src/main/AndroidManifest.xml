<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="comp3350.fairprice">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FairPrice">
        <activity
            android:name=".presentation.MyListings"
            android:exported="false" />
        <activity
            android:name=".presentation.payment"
            android:exported="false" />
        <activity
            android:name=".presentation.Description"
            android:exported="false" />
        <activity
            android:name=".presentation.Categories"
            android:exported="false" />
        <activity
            android:name=".presentation.Register"
            android:exported="false" />
        <activity
            android:name=".presentation.Welcome"
            android:exported="false"
            android:parentActivityName=".presentation.Login" />
        <activity
            android:name=".presentation.Login"
            android:exported="false" />
        <activity
            android:name=".presentation.HomepageActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.NewPostActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>